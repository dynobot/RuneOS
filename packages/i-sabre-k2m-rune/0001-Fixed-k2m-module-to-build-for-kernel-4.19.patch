+				ISABRECODEC_REG_22, 0, fir_filter_type_texts);
+
+
+/* IIR Filter Select */
+static const char * const iir_filter_texts[] = {
+	"47kHz",
+	"50kHz",
+	"60kHz",
+	"70kHz",
+};
+
+static SOC_ENUM_SINGLE_DECL(i_sabre_iir_filter_enum,
+				ISABRECODEC_REG_23, 0, iir_filter_texts);
+
